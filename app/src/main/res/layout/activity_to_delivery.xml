<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ToDeliveryActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:visibility="visible"
        android:gravity="center_vertical"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <ImageView
            android:id="@+id/imageleft"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:tint="@color/text_color_white"
            android:src="@drawable/arrow1"
            android:layout_marginLeft="-20dp"
            android:foregroundGravity="left"
            android:layout_marginStart="-20dp" />
        <ImageView
            android:id="@+id/home"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:src="@drawable/home"
            android:tint="@color/white"/>
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/text_color_white"
            android:text="@string/cmp_map"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:textColor="@color/text_color_white"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"/>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <Button
            android:id="@+id/btn_list_parcel"
            android:layout_marginTop="40dp"
            android:layout_margin="20dp"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:background="@drawable/orangebuttonselector"
            android:text="@string/list_of_parcels"
            android:textColor="@color/white"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/btn_read"
            android:layout_marginTop="40dp"
            android:layout_width="250dp"
            android:layout_margin="20dp"
            android:layout_height="70dp"
            android:background="@drawable/orangebuttonselector"
            android:text="@string/read"
            android:textColor="@color/white"
            android:textAllCaps="false"/>
    </LinearLayout>
</LinearLayout>