<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SelectReasonActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:visibility="visible"
        android:gravity="center_vertical"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <ImageView
            android:id="@+id/imageleft"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:tint="@color/text_color_white"
            android:src="@drawable/arrow1"
            android:layout_marginLeft="-20dp"
            android:foregroundGravity="left"
            android:layout_marginStart="-20dp" />
        <ImageView
            android:id="@+id/home"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:src="@drawable/home"
            android:tint="@color/white"/>
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/text_color_white"
            android:text="@string/cmp_map"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:textColor="@color/text_color_white"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"/>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_1"
                android:layout_marginTop="40dp"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/orangebuttonselector"
                android:text="@string/_1_reason"
                android:textColor="@color/white"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/btn_2"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:layout_height="70dp"
                android:background="@drawable/orangebuttonselector"
                android:text="@string/_2_reason"
                android:textColor="@color/white"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/btn_3"
                android:layout_marginTop="40dp"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/orangebuttonselector"
                android:text="@string/_3_reason"
                android:textColor="@color/white"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/btn_4"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:layout_height="70dp"
                android:background="@drawable/orangebuttonselector"
                android:text="@string/_4_reason"
                android:textColor="@color/white"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/btn_5"
                android:layout_marginTop="40dp"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/orangebuttonselector"
                android:text="@string/_5_reason"
                android:textColor="@color/white"
                android:textAllCaps="false"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>